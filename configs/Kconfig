# Kconfig file for LVGL v9.2.2 and LVGL v8.4.0
choice BR2_PACKAGE_LVGL_VERSION
	prompt "LVGL Version."
	default BR2_PACKAGE_LVGL_VERSION_8
	help
	  Select LVGL version.

	config BR2_PACKAGE_LVGL_VERSION_8
		bool "v8.x"
	config BR2_PACKAGE_LVGL_VERSION_9
		bool "v9.x"
endchoice

menu "LVGL configuration"

	# Define CONFIG_LV_CONF_SKIP so we can use LVGL
	# without lv_conf.h file, the lv_conf_internal.h and
	# lv_conf_kconfig.h files are used instead.
	config BR2_LV_CONF_SKIP
		bool "Check this to not use custom lv_conf.h"
		default n

	config BR2_LV_CONF_MINIMAL
		bool "LVGL minimal configuration"

	menu "Color Settings"
		choice BR2_LV_COLOR_DEPTH
			prompt "Color depth"
			default BR2_LV_COLOR_DEPTH_32
			help
				Color depth to be used.

			config BR2_LV_COLOR_DEPTH_32
				bool "32: XRGB8888"
			config BR2_LV_COLOR_DEPTH_24
				depends on BR2_PACKAGE_LVGL_VERSION_9
				bool "24: RGB888"
			config BR2_LV_COLOR_DEPTH_16
				bool "16: RGB565"
			config BR2_LV_COLOR_DEPTH_8
				bool "8: RGB232"
			config BR2_LV_COLOR_DEPTH_1
				bool "1: 1 byte per pixel"
		endchoice

		config BR2_LV_COLOR_DEPTH
			int
			default 1 if BR2_LV_COLOR_DEPTH_1
			default 8 if BR2_LV_COLOR_DEPTH_8
			default 16 if BR2_LV_COLOR_DEPTH_16
			default 24 if BR2_LV_COLOR_DEPTH_24
			default 32 if BR2_LV_COLOR_DEPTH_32

		config BR2_LV_COLOR_16_SWAP
			bool "Swap the 2 bytes of RGB565 color. Useful if the display has an 8-bit interface (e.g. SPI)."
			depends on BR2_LV_COLOR_DEPTH_16
			depends on BR2_PACKAGE_LVGL_VERSION_8

		config BR2_LV_COLOR_SCREEN_TRANSP
			bool "Enable more complex drawing routines to manage screens transparency."
			depends on BR2_LV_COLOR_DEPTH_32
			depends on BR2_PACKAGE_LVGL_VERSION_8
			help
				Can be used if the UI is above another layer, e.g. an OSD menu or video player.
				Requires `LV_COLOR_DEPTH = 32` colors and the screen's `bg_opa` should be set to
				non LV_OPA_COVER value

		config BR2_LV_COLOR_CHROMA_KEY_HEX
			hex "Images pixels with this color will not be drawn (if they are chroma keyed)."
			depends on BR2_PACKAGE_LVGL_VERSION_8
			range 0x000000 0xFFFFFF
			default 0x00FF00
			help
				See misc/lv_color.h for some color values examples.
	endmenu

	menu "Memory settings"
		if BR2_PACKAGE_LVGL_VERSION_8
			source "configs/8.4.0/Config.in.memory"
		endif
		if BR2_PACKAGE_LVGL_VERSION_9
			source "configs/9.2.2/Config.in.memory"
		endif
	endmenu

	menu "HAL Settings"
		config BR2_LV_DEF_REFR_PERIOD
			int "Default refresh period (ms)"
			default 16
			help
				Default display refresh, input device read and animation step period.

		config BR2_LV_INDEV_DEF_READ_PERIOD
			int "Input device read period [ms]."
			depends on BR2_PACKAGE_LVGL_VERSION_8
			default 30

		config BR2_LV_DPI_DEF
			int "Default Dots Per Inch (in px/inch)"
			default 130
			help
				Used to initialize default sizes such as widgets sized, style paddings.
				(Not so important, you can adjust it to modify default sizes and spaces)

		config BR2_LV_TICK_CUSTOM
			bool "Use a custom tick source"
			depends on BR2_PACKAGE_LVGL_VERSION_8

		config BR2_LV_TICK_CUSTOM_INCLUDE
			string "Header for the system time function"
			default "src/misc/lv_systick.h"
			depends on BR2_LV_TICK_CUSTOM
			depends on BR2_PACKAGE_LVGL_VERSION_8
	endmenu

	menu "Operating System (OS)"
		depends on BR2_PACKAGE_LVGL_VERSION_9
		choice BR2_LV_USE_OS
			prompt "Default operating system to use"
			default BR2_LV_OS_PTHREAD

			config BR2_LV_OS_NONE
				bool "0: NONE"
			config BR2_LV_OS_PTHREAD
				bool "1: PTHREAD"
			config BR2_LV_OS_FREERTOS
				bool "2: FREERTOS"
			config BR2_LV_OS_CMSIS_RTOS2
				bool "3: CMSIS_RTOS2"
			config BR2_LV_OS_RTTHREAD
				bool "4: RTTHREAD"
			config BR2_LV_OS_WINDOWS
				bool "5: WINDOWS"
			config BR2_LV_OS_MQX
				bool "6: MQX"
			config BR2_LV_OS_CUSTOM
				bool "255: CUSTOM"
		endchoice

		config BR2_LV_USE_OS
			int
			default 0 if BR2_LV_OS_NONE
			default 1 if BR2_LV_OS_PTHREAD
			default 2 if BR2_LV_OS_FREERTOS
			default 3 if BR2_LV_OS_CMSIS_RTOS2
			default 4 if BR2_LV_OS_RTTHREAD
			default 5 if BR2_LV_OS_WINDOWS
			default 6 if BR2_LV_OS_MQX
			default 255 if BR2_LV_OS_CUSTOM

		config BR2_LV_OS_CUSTOM_INCLUDE
			string "Custom OS include header"
			default "stdint.h"
			depends on BR2_LV_OS_CUSTOM

        config BR2_LV_USE_FREERTOS_TASK_NOTIFY
            bool "Use RTOS task with a direct notification for synchronization"
            default y
            depends on BR2_LV_OS_FREERTOS
        help
            Unblocking an RTOS task with a direct notification is 45% faster and uses less RAM
            than unblocking a task using an intermediary object such as a binary semaphore.
            RTOS task notifications can only be used when there is only one task that can be the recipient of the event.
	endmenu

	menu "Rendering Configuration"
		if BR2_PACKAGE_LVGL_VERSION_8
			source "configs/8.4.0/Config.in.rendering"
		endif
		if BR2_PACKAGE_LVGL_VERSION_9
			source "configs/9.2.2/Config.in.rendering"
		endif
	endmenu

	menu "Feature Configuration"
		menu "Logging"
			config BR2_LV_USE_LOG
				bool "Enable the log module"

			choice
				bool "Default log verbosity" if BR2_LV_USE_LOG
				default BR2_LV_LOG_LEVEL_WARN
				help
					Specify how important log should be added.

				config BR2_LV_LOG_LEVEL_TRACE
					bool "[Trace]A lot of logs to give detailed information"
				config BR2_LV_LOG_LEVEL_INFO
					bool "[Info]Log important events"
				config BR2_LV_LOG_LEVEL_WARN
					bool "[Warn]Log if something unwanted happened but didn't cause a problem"
				config BR2_LV_LOG_LEVEL_ERROR
					bool "[Error]Only critical issues, when the system may fail"
				config BR2_LV_LOG_LEVEL_USER
					bool "[User]Only logs added by the user"
				config BR2_LV_LOG_LEVEL_NONE
					bool "[None]Do not log anything"
			endchoice

			config BR2_LV_LOG_LEVEL
				int
				default 0 if BR2_LV_LOG_LEVEL_TRACE
				default 1 if BR2_LV_LOG_LEVEL_INFO
				default 2 if BR2_LV_LOG_LEVEL_WARN
				default 3 if BR2_LV_LOG_LEVEL_ERROR
				default 4 if BR2_LV_LOG_LEVEL_USER
				default 5 if BR2_LV_LOG_LEVEL_NONE

			config BR2_LV_LOG_PRINTF
				bool "Print the log with 'printf'" if BR2_LV_USE_LOG
				help
					Use printf for log output.
					If not set the user needs to register a callback with `lv_log_register_print_cb`.

			config BR2_LV_LOG_USE_TIMESTAMP
				bool "Enable print timestamp"
				default y
				depends on BR2_LV_USE_LOG && BR2_PACKAGE_LVGL_VERSION_9

			config BR2_LV_LOG_USE_FILE_LINE
				bool "Enable print file and line number"
				default y
				depends on BR2_LV_USE_LOG && BR2_PACKAGE_LVGL_VERSION_9

			config BR2_LV_LOG_TRACE_MEM
				bool "Enable/Disable BR2_LV_LOG_TRACE in mem module"
				default y
				depends on BR2_LV_USE_LOG

			config BR2_LV_LOG_TRACE_TIMER
				bool "Enable/Disable BR2_LV_LOG_TRACE in timer module"
				default y
				depends on BR2_LV_USE_LOG

			config BR2_LV_LOG_TRACE_INDEV
				bool "Enable/Disable BR2_LV_LOG_TRACE in indev module"
				default y
				depends on BR2_LV_USE_LOG

			config BR2_LV_LOG_TRACE_DISP_REFR
				bool "Enable/Disable BR2_LV_LOG_TRACE in disp refr module"
				default y
				depends on BR2_LV_USE_LOG

			config BR2_LV_LOG_TRACE_EVENT
				bool "Enable/Disable BR2_LV_LOG_TRACE in event module"
				default y
				depends on BR2_LV_USE_LOG

			config BR2_LV_LOG_TRACE_OBJ_CREATE
				bool "Enable/Disable BR2_LV_LOG_TRACE in obj create module"
				default y
				depends on BR2_LV_USE_LOG

			config BR2_LV_LOG_TRACE_LAYOUT
				bool "Enable/Disable BR2_LV_LOG_TRACE in layout module"
				default y
				depends on BR2_LV_USE_LOG

			config BR2_LV_LOG_TRACE_ANIM
				bool "Enable/Disable BR2_LV_LOG_TRACE in anim module"
				default y
				depends on BR2_LV_USE_LOG

			config BR2_LV_LOG_TRACE_CACHE
				bool "Enable/Disable BR2_LV_LOG_TRACE in cache module"
				default y
				depends on BR2_LV_USE_LOG
		endmenu

		menu "Asserts"
			config BR2_LV_USE_ASSERT_NULL
				bool "Check if the parameter is NULL. (Very fast, recommended)"
				default y if !BR2_LV_CONF_MINIMAL

			config BR2_LV_USE_ASSERT_MALLOC
				bool "Checks if the memory is successfully allocated or no. (Very fast, recommended)"
				default y if !BR2_LV_CONF_MINIMAL

			config BR2_LV_USE_ASSERT_STYLE
				bool "Check if the styles are properly initialized. (Very fast, recommended)"

			config BR2_LV_USE_ASSERT_MEM_INTEGRITY
				bool "Check the integrity of `lv_mem` after critical operations. (Slow)"

			config BR2_LV_USE_ASSERT_OBJ
				bool "Check NULL, the object's type and existence (e.g. not deleted). (Slow)"

			config BR2_LV_ASSERT_HANDLER_INCLUDE
				string "Header to include for the custom assert function"
				default "assert.h"
				help
					Add a custom handler when assert happens e.g. to restart the MCU
		endmenu

		menu "Debug"
			config BR2_LV_USE_REFR_DEBUG
				bool "Draw random colored rectangles over the redrawn areas"

			config BR2_LV_USE_LAYER_DEBUG
				bool "Draw a red overlay for ARGB layers and a green overlay for RGB layers"

			config BR2_LV_USE_PARALLEL_DRAW_DEBUG
				bool "Draw overlays with different colors for each draw_unit's tasks"
				help
					Also add the index number of the draw unit on white background.
					For layers add the index number of the draw unit on black background.
		endmenu

		menu "Others"
			config BR2_LV_GRADIENT_MAX_STOPS
				int "Number of stops allowed per gradient"
				default 2
				depends on BR2_LV_USE_DRAW_SW
				help
					Increase this to allow more stops.
					This adds (sizeof(lv_color_t) + 1) bytes per additional stop

			config BR2_LV_COLOR_MIX_ROUND_OFS
				int "Adjust color mix functions rounding"
				default 128 if !BR2_LV_COLOR_DEPTH_32
				default 0 if BR2_LV_COLOR_DEPTH_32
				range 0 254
				help
					0: no adjustment, get the integer part of the result (round down)
					64: round up from x.75
					128: round up from half
					192: round up from x.25
					254: round up

			if BR2_PACKAGE_LVGL_VERSION_8
				source "configs/8.4.0/Config.in.others"
			endif
			if BR2_PACKAGE_LVGL_VERSION_9
				source "configs/9.2.2/Config.in.others"
			endif
		endmenu
	endmenu

	menu "Compiler Settings"
		config BR2_LV_BIG_ENDIAN_SYSTEM
			bool "For big endian systems set to 1"

		config BR2_LV_ATTRIBUTE_MEM_ALIGN_SIZE
			int "Required alignment size for buffers"
			default 1

		config BR2_LV_ATTRIBUTE_FAST_MEM_USE_IRAM
			bool "Set IRAM as BR2_LV_ATTRIBUTE_FAST_MEM"
			help
				Set this option to configure IRAM as BR2_LV_ATTRIBUTE_FAST_MEM

		config BR2_LV_USE_LARGE_COORD
			bool "Extend the default -32k..32k coordinate range to -4M..4M by using int32_t for coordinates instead of int16_t"
			depends on BR2_PACKAGE_LVGL_VERSION_8

		config BR2_LV_USE_FLOAT
			bool "Use float as lv_value_precise_t"
			default n
			depends on BR2_PACKAGE_LVGL_VERSION_9

		config BR2_LV_USE_MATRIX
			bool "Enable matrix support"
			default n
			select BR2_LV_USE_FLOAT
			depends on BR2_PACKAGE_LVGL_VERSION_9

		config BR2_LV_USE_PRIVATE_API
			bool "Include `lvgl_private.h` in `lvgl.h` to access internal data and functions by default"
			default n
			depends on BR2_PACKAGE_LVGL_VERSION_9
	endmenu

